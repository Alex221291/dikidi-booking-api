generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Salon {
  id    String     @default(uuid()) @id
  dkdCompanyId    String
  tgBotId    String
  tgToken    String
  users User[]
  @@map("salons")
}

model User {
  id    String     @default(uuid()) @id
  tgUserId    String?
  tgUserName    String?
  tgChatId    String?
  userId    String? @default(uuid())
  role    UserRoles
  salon    Salon?    @relation(fields: [salonId], references: [id])
  salonId  String? @default(uuid())
  @@map("users")
}

model Client {
  id    String     @default(uuid()) @id
  name    String?
  phone    String?
  rewiers Review[]
  records Record[]
  @@map("clients")
}

model Staff {
  id    String     @default(uuid()) @id
  rewiers Review[]
  records Record[]
  contacts StaffContact[]
  @@map("staff")
}

model Review {
  id    String     @default(uuid()) @id
  name    String?
  description    String?
  date    DateTime @default(now()) @db.Date
  score    Int?
  client    Client?    @relation(fields: [clientId], references: [id])
  clientId  String? @default(uuid())
  staff    Staff?    @relation(fields: [staffId], references: [id])
  staffId  String? @default(uuid())
  @@map("reviews")
}

model Record {
  id    String     @default(uuid()) @id
  dkdRecordId    String?
  client    Client?    @relation(fields: [clientId], references: [id])
  clientId  String? @default(uuid())
  staff    Staff?    @relation(fields: [staffId], references: [id])
  staffId  String? @default(uuid())
  @@map("records")
}

model StaffContact {
  id    String     @default(uuid()) @id
  type    ContactTypes
  value   String?
  staff    Staff?    @relation(fields: [staffId], references: [id])
  staffId  String? @default(uuid())
  @@map("staff_contacts")
}

enum UserRoles {
  DIRECTOR
  ADMINISTRATOR
  MASTER
  CLIENT  
}

enum ContactTypes {
  TELEGRAM
  VIBER
  WHATSAPP  
}
